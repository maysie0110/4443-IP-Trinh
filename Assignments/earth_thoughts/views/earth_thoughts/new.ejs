<% include ../partials/header %>

<div class="container float-left">
    <div class="row">
        <h1 style="text-align: center;">Create a New Earth Thoughts</h1>
        
        <div class="col-lg-3" style="width:35%; margin:30px auto">
             <form action="/earth_thoughts" method="POST">
                <div class="form-group">
                    <input id="imageurl" class="form-control" type="text" name="image" placeholder="image url">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="thoughts" placeholder="shower thoughts">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            
            <a href="/earth_thoughts">Go Back</a>
        </div>
        <div class="col-lg-9" style="width:65% ">
            <div class="imageupload panel panel-default">
                <div class="panel-heading clearfix">
                    <div>
                        <h3 class="panel-title pull-left">Paste Image URL or Select Image file:</h3>
                        <br>
                        <button class="btn btn-success btn-block" type="button" onclick="displayRadioValue()"> 
                            Select
                        </button> 
                    </div>

                    
                    <% earthporns.forEach(function(earthporn){ %>
                    <div class="col-md-3 text-center">
                    <label class="image-checkbox">
                        <img class = "img-responsive" src="<%= earthporn.thumbnail %>" id="<%= earthporn.id %>" value="<%= earthporn.imageurl %>"/>
                        
                        <input type="radio" name="saveImg" value="<%= earthporn.imageurl %>"/>
                        
                    </label>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        <script> 
        // update image url form when a image is selected
             function displayRadioValue() { 
                var ele = document.getElementsByName('saveImg'); 
                for(i = 0; i < ele.length; i++) { 

                    if(ele[i].checked){
                        $("#imageurl").val(ele[i].value);
                    }
            } 
        } 
        </script> 
</body>
</html>
